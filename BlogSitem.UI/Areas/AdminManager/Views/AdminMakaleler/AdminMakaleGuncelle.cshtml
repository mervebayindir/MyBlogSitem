@model BlogSitem.DLL.BlogSiteDatabase.Makaleler

@{
    ViewBag.Title = "AdminMakaleGuncelle";
    Layout = "~/Areas/AdminManager/Views/Shared/_AdminLayout.cshtml";
}

@section addTopLibrary{
    <link rel="stylesheet" href="~/templateAdmin/plugins/summernote/summernote-bs4.min.css">
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                </h1>
            </div>
            <div class="col-sm-6">

                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AdminManager/AdminMakaleler/AdminMakalelerIndex">Makaleler</a></li>
                    <li class="breadcrumb-item active">Makale Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Makaleler</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MakaleID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Makale Kategori</label>
                                    <select class="form-control select2" name="kategoriID">
                                        <option selected value="@Model.MakaleKategoriID.KategoriID">@Model.MakaleKategoriID.KategoriAdi</option>

                                        @foreach (var item in ViewBag.kategori)
                                        {
                                            <option value="@item.KategoriID">@item.KategoriAdi</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Makale İçerik</label>
                                    <textarea id="makaleIcerik" name="makaleIcerik">@Model.MakaleIcerik   </textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.EklenmeTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.EklenmeTarihi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.EklenmeTarihi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AktifMi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.AktifMi)
                                        @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Makale Güncelle" class="btn btn-default" />
                                </div>
                            </div>
                            <div>
                                @Html.Raw(ViewBag.mesaj)
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section addBottomLibrary{
    <script src="~/templateAdmin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>$(function () {
            // Summernote
            $('#makaleIcerik').summernote()

        })</script>

}
